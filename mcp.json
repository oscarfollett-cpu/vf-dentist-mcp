{
  "schema_version": "1.0",
  "name": "dentist_calendar",
  "description": "Tools for checking, creating, updating and deleting dentist appointments.",
  "tools": [
    {
      "name": "check_availability",
      "description": "Check if a time slot is free and get a booking token.",
      "input_schema": {
        "type": "object",
        "properties": {
          "start": { "type": "string", "description": "ISO 8601 start time" },
          "end": { "type": "string", "description": "ISO 8601 end time" }
        },
        "required": ["start", "end"]
      },
      "endpoint": {
        "type": "http",
        "url": "https://vf-dentist-mcp-production.up.railway.app/check",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json",
          "x-api-key": "{{MCP_API_KEY}}"
        }
      }
    },
    {
      "name": "create_appointment",
      "description": "Create a dentist appointment after confirming availability.",
      "input_schema": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "title": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "patient": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "phone": { "type": "string" }
            },
            "required": ["name", "phone"]
          }
        },
        "required": ["token", "title", "start", "end", "patient"]
      },
      "endpoint": {
        "type": "http",
        "url": "https://vf-dentist-mcp-production.up.railway.app/create",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json",
          "x-api-key": "{{MCP_API_KEY}}"
        }
      }
    },
    {
      "name": "update_appointment",
      "description": "Reschedule an existing event using its ID.",
      "input_schema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["eventId", "start", "end"]
      },
      "endpoint": {
        "type": "http",
        "url": "https://vf-dentist-mcp-production.up.railway.app/update",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json",
          "x-api-key": "{{MCP_API_KEY}}"
        }
      }
    },
    {
      "name": "delete_appointment",
      "description": "Cancel an appointment using its eventId.",
      "input_schema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" }
        },
        "required": ["eventId"]
      },
      "endpoint": {
        "type": "http",
        "url": "https://vf-dentist-mcp-production.up.railway.app/delete",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json",
          "x-api-key": "{{MCP_API_KEY}}"
        }
      }
    }
  ]
}