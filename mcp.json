{
  "name": "dentist_calendar",
  "version": "1.0.0",
  "description": "MCP server for dentist appointment scheduling using Google Calendar.",
  "tools": [
    {
      "name": "check_availability",
      "type": "http",
      "method": "POST",
      "url": "/check",
      "description": "Check if a timeslot is available and not on weekends.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["start", "end"]
      }
    },
    {
      "name": "create_appointment",
      "type": "http",
      "method": "POST",
      "url": "/create",
      "description": "Create a new dentist appointment in Google Calendar.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "patient": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "phone": { "type": "string" }
            },
            "required": ["name"]
          }
        },
        "required": ["title", "start", "end"]
      }
    },
    {
      "name": "update_appointment",
      "type": "http",
      "method": "POST",
      "url": "/update",
      "description": "Update an existing appointmentâ€™s date and time.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["eventId", "start", "end"]
      }
    },
    {
      "name": "delete_appointment",
      "type": "http",
      "method": "POST",
      "url": "/delete",
      "description": "Delete a dentist appointment from the calendar.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" }
        },
        "required": ["eventId"]
      }
    }
  ]
}