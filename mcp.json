{
  "version": "1.0.0",
  "name": "dentist_calendar_mcp",
  "description": "Google Calendar MCP server for dentist scheduling.",
  "tools": {
    "check_availability": {
      "description": "Checks if a time slot is available and not conflicting or on weekends.",
      "type": "http",
      "method": "POST",
      "url": "/check",
      "inputSchema": {
        "type": "object",
        "properties": {
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["start", "end"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "available": { "type": "boolean" },
          "reason": { "type": "string" },
          "token": { "type": "string" }
        }
      }
    },

    "create_appointment": {
      "description": "Creates a new appointment in Google Calendar.",
      "type": "http",
      "method": "POST",
      "url": "/create",
      "inputSchema": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "title": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "patient": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "phone": { "type": "string" }
            }
          }
        },
        "required": ["token", "title", "start", "end"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "eventId": { "type": "string" }
        }
      }
    },

    "update_appointment": {
      "description": "Updates a Google Calendar event.",
      "type": "http",
      "method": "POST",
      "url": "/update",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["eventId", "start", "end"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "event": { "type": "object" }
        }
      }
    },

    "delete_appointment": {
      "description": "Deletes an appointment.",
      "type": "http",
      "method": "POST",
      "url": "/delete",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" }
        },
        "required": ["eventId"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" }
        }
      }
    }
  }
}