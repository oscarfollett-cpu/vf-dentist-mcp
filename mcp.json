{
  "schema_version": "1.0",
  "name": "DentistMCP",
  "description": "Tools for checking, creating, updating and deleting dentist appointments.",
  "tools": [
    {
      "name": "check_availability",
      "description": "Check if a time slot is free and get a booking token.",
      "input_schema": {
        "type": "object",
        "properties": {
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["start", "end"]
      },
      "endpoint": {
        "type": "http",
        "method": "POST",
        "url": "https://vf-dentist-mcp-production.up.railway.app/check"
      }
    },
    {
      "name": "create_appointment",
      "description": "Create a dentist appointment after confirming availability.",
      "input_schema": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "title": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "patient": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "phone": { "type": "string" }
            },
            "required": ["name", "phone"]
          }
        },
        "required": ["token", "title", "start", "end", "patient"]
      },
      "endpoint": {
        "type": "http",
        "method": "POST",
        "url": "https://vf-dentist-mcp-production.up.railway.app/create"
      }
    },
    {
      "name": "update_appointment",
      "description": "Reschedule a dentist appointment.",
      "input_schema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["eventId", "start", "end"]
      },
      "endpoint": {
        "type": "http",
        "method": "POST",
        "url": "https://vf-dentist-mcp-production.up.railway.app/update"
      }
    },
    {
      "name": "delete_appointment",
      "description": "Cancel an appointment using its eventId.",
      "input_schema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" }
        },
        "required": ["eventId"]
      },
      "endpoint": {
        "type": "http",
        "method": "POST",
        "url": "https://vf-dentist-mcp-production.up.railway.app/delete"
      }
    }
  ]
}