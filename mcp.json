{
  "version": "1.0.0",
  "tools": {
    "check_availability": {
      "type": "http",
      "method": "POST",
      "url": "/check",
      "inputSchema": {
        "type": "object",
        "properties": {
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["start", "end"]
      }
    },
    "create_appointment": {
      "type": "http",
      "method": "POST",
      "url": "/create",
      "inputSchema": {
        "type": "object",
        "properties": {
          "summary": { "type": "string" },
          "description": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["summary", "start", "end"]
      }
    },
    "update_appointment": {
      "type": "http",
      "method": "POST",
      "url": "/update",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["eventId", "start", "end"]
      }
    },
    "delete_appointment": {
      "type": "http",
      "method": "POST",
      "url": "/delete",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" }
        },
        "required": ["eventId"]
      }
    }
  }
}