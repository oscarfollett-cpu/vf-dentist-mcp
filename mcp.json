{
  "version": "1.0.0",
  "name": "dentist_calendar_mcp",
  "description": "MCP server for dentist appointment scheduling with Google Calendar integration.",

  "tools": [
    {
      "name": "check_availability",
      "description": "Checks if the requested time slot is available and not on a weekend or double-booked.",
      "type": "http",
      "method": "POST",
      "url": "/check",
      "inputSchema": {
        "type": "object",
        "properties": {
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["start", "end"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "available": { "type": "boolean" },
          "reason": { "type": "string" },
          "token": { "type": "string" }
        }
      }
    },

    {
      "name": "create_appointment",
      "description": "Creates a new appointment in Google Calendar.",
      "type": "http",
      "method": "POST",
      "url": "/create",
      "inputSchema": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "title": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "patient": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "phone": { "type": "string" }
            }
          }
        },
        "required": ["token", "title", "start", "end"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "eventId": { "type": "string" }
        }
      }
    },

    {
      "name": "update_appointment",
      "description": "Updates the date/time of an existing calendar appointment.",
      "type": "http",
      "method": "POST",
      "url": "/update",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["eventId", "start", "end"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "event": { "type": "object" }
        }
      }
    },

    {
      "name": "delete_appointment",
      "description": "Deletes an appointment from Google Calendar.",
      "type": "http",
      "method": "POST",
      "url": "/delete",
      "inputSchema": {
        "type": "object",
        "properties": {
          "eventId": { "type": "string" }
        },
        "required": ["eventId"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" }
        }
      }
    }
  ]
}